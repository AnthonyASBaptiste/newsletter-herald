# Newsletter Herald API - Environment Variables
# Copy this file to .env and fill in your actual values

# API Authentication
# Your API key for authenticating requests to the API
API_KEY=your_api_key_here

# LLM Provider API Keys
# OpenAI API key (optional, only needed if using OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here
# Anthropic API key (required for Claude model)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# OpenRouter API key (optional, only needed if using OpenRouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Database Configuration
# Connection string for your PostgreSQL database
# Format: postgresql://username:password@host:port/database?sslmode=require&channel_binding=require
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Stack Auth Configuration (optional, only needed if using Stack Auth)
# Your Stack Auth project ID
STACK_PROJECT_ID=your_stack_project_id_here
# Your Stack Auth publishable client key
STACK_PUBLISHABLE_CLIENT_KEY=your_stack_publishable_client_key_here
# Your Stack Auth secret server key
STACK_SECRET_SERVER_KEY=your_stack_secret_server_key_here

# Application Configuration
# Debug mode (true/false)
DEBUG=false
# API host (default: 0.0.0.0)
API_HOST=0.0.0.0
# API port (default: 8000)
API_PORT=8000